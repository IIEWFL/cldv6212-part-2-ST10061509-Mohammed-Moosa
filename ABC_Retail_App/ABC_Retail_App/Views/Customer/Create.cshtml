@model ABC_Retail_App.Models.Customer
@{
    ViewData["Title"] = "Create Customer";
}
<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Create New Customer</h1>
    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline">@ViewBag.ErrorMessage</span>
        </div>
    }
    <div class="bg-white p-6 rounded-lg shadow-md max-w-lg mx-auto">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
            <div class="mb-4">
                <label asp-for="Name" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Name" class="shadow appearance-none border rounded-md w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Name" class="text-red-600 text-sm mt-1"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Email" class="shadow appearance-none border rounded-md w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Email" class="text-red-600 text-sm mt-1"></span>
            </div>
            <div class="mb-6">
                <label asp-for="Phone" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Phone" class="shadow appearance-none border rounded-md w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Phone" class="text-red-600 text-sm mt-1"></span>
            </div>
            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:shadow-outline transition duration-150 ease-in-out">
                    Create
                </button>
                <a asp-action="Index" class="inline-block align-baseline font-bold text-sm text-blue-600 hover:text-blue-800">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Inter', sans-serif;
    }
</style>
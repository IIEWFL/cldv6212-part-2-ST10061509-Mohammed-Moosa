@model IEnumerable<string>

@{
    ViewData["Title"] = "Product Images";
    // This MUST be your exact Azure Storage Account Name (lowercase)
    var blobStorageBaseUrl = $"https://st10061509sa.blob.core.windows.net/product-images/";
}

<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Product Images (Azure Blob Storage)</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Success!</strong>
            <span class="block sm:inline">@TempData["SuccessMessage"]</span>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <strong class="font-bold">Error!</strong>
            <span class="block sm:inline">@TempData["ErrorMessage"]</span>
        </div>
    }

    <div class="mb-6 p-6 bg-white rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold mb-4 text-gray-700">Upload New Image</h2>
        <form asp-action="Upload" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="mb-4">
                <label for="file" class="block text-gray-700 text-sm font-bold mb-2">Select Image File:</label>
                <input type="file" name="file" id="file" class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none" accept="image/*" />
            </div>
            <button type="submit" class="inline-flex items-center px-4 py-2 bg-purple-600 text-white font-semibold rounded-md shadow-sm hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
                <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                </svg>
                Upload Image
            </button>
        </form>
    </div>

    <h2 class="text-2xl font-semibold mb-4 text-gray-700">Available Images</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @if (Model != null && Model.Any())
        {
            @foreach (var fileName in Model)
            {
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="@(blobStorageBaseUrl + fileName)" alt="@fileName" class="w-full h-48 object-cover object-center" onerror="this.onerror=null;this.src='https://placehold.co/400x200/cccccc/333333?text=No+Image';" />
                    <div class="p-4">
                        <p class="text-lg font-medium text-gray-800 break-words mb-3">@fileName</p>
                        <div class="flex justify-between items-center">
                            <a href="@Url.Action("Download", "Image", new { fileName = fileName })" class="inline-flex items-center px-3 py-1.5 bg-green-500 text-white text-sm font-medium rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-400">
                                <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                </svg>
                                Download
                            </a>
                            <a href="@Url.Action("Delete", "Image", new { fileName = fileName })" class="inline-flex items-center px-3 py-1.5 bg-red-500 text-white text-sm font-medium rounded-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-400">
                                <svg class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1H9a1 1 0 00-1 1v3m.75 0h6.5" />
                                </svg>
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-gray-500 col-span-3">No images uploaded yet.</p>
        }
    </div>
</div>

<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Inter', sans-serif;
    }
</style>
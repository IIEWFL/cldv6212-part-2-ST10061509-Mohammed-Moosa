<!-- Views/Order/Create.cshtml -->
@model ABC_Retail_App.Models.Order
@{
    ViewData["Title"] = "Create Order";
}

<div class="container mx-auto p-4">
    <div class="flex justify-center">
        <div class="w-full max-w-3xl">
            <div class="bg-white rounded-xl shadow-2xl overflow-hidden">

                <!-- Card Header -->
                <div class="bg-indigo-600 text-white p-5 rounded-t-xl">
                    <h3 class="text-2xl font-semibold flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        Create New Order
                    </h3>
                </div>

                <!-- Card Body -->
                <div class="p-8">

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-lg shadow-sm" role="alert">
                            <div class="flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                </svg>
                                <strong>Error:</strong>
                                <span class="block sm:inline ml-2">@ViewBag.ErrorMessage</span>
                            </div>
                        </div>
                    }

                    <form asp-action="Create" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-red-600 p-4 mb-4 bg-red-50 rounded-lg border border-red-200"></div>

                        <!-- Customer Name -->
                        <div class="mb-5">
                            <label asp-for="CustomerName" class="block text-gray-700 text-sm font-bold mb-2">Customer Name</label>
                            <input asp-for="CustomerName"
                                   class="shadow appearance-none border border-gray-300 rounded-full w-full py-3 px-5 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-150"
                                   placeholder="Enter full name of customer" required />
                            <span asp-validation-for="CustomerName" class="text-red-500 text-sm mt-1 block"></span>
                        </div>

                        <!-- Product Name -->
                        <div class="mb-5">
                            <label asp-for="ProductName" class="block text-gray-700 text-sm font-bold mb-2">Product Name</label>
                            <input asp-for="ProductName"
                                   class="shadow appearance-none border border-gray-300 rounded-full w-full py-3 px-5 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-150"
                                   placeholder="e.g., UltraBoost 24 Runners" required />
                            <span asp-validation-for="ProductName" class="text-red-500 text-sm mt-1 block"></span>
                        </div>

                        <!-- Quantity and Total Price Row -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

                            <!-- Quantity -->
                            <div class="mb-5">
                                <label asp-for="Quantity" class="block text-gray-700 text-sm font-bold mb-2">Quantity</label>
                                <input asp-for="Quantity" type="number"
                                       class="shadow appearance-none border border-gray-300 rounded-full w-full py-3 px-5 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-150"
                                       min="1" placeholder="Enter quantity" required />
                                <span asp-validation-for="Quantity" class="text-red-500 text-sm mt-1 block"></span>
                            </div>

                            <!-- Total Price -->
                            <div class="mb-5">
                                <label asp-for="TotalPrice" class="block text-gray-700 text-sm font-bold mb-2">Total Price (R)</label>
                                <input asp-for="TotalPrice" type="number" step="0.01"
                                       class="shadow appearance-none border border-gray-300 rounded-full w-full py-3 px-5 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-150"
                                       placeholder="Enter total price (e.g., 199.99)" required />
                                <span asp-validation-for="TotalPrice" class="text-red-500 text-sm mt-1 block"></span>
                            </div>
                        </div>

                        <!-- Submission Alert -->
                        <div class="bg-blue-50 border-l-4 border-blue-500 text-blue-700 p-4 mt-6 mb-8 rounded-lg shadow-inner" role="alert">
                            <div class="flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <div>
                                    <p class="font-bold">Submission Note</p>
                                    <p class="text-sm">
                                        This action queues the order for asynchronous processing by an Azure Function.
                                        The initial status will be <strong class="text-blue-900">Pending</strong>.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex justify-end pt-5 border-t border-gray-200">
                            <a asp-action="Index"
                               class="text-gray-600 hover:text-gray-800 font-medium py-3 px-6 rounded-full transition duration-150 ease-in-out mr-4">
                                Cancel
                            </a>
                            <button type="submit"
                                    class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-8 rounded-full shadow-lg transition duration-150 ease-in-out transform hover:scale-105">
                                <i class="bi bi-check-circle me-1"></i> Submit Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f4f7f9; /* Light background for contrast */
    }
</style>
